<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagem_usuario"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/user"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <TextView
            android:id="@+id/nome_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trocar foto"
            android:gravity="center"
            android:textColor="@color/azul"
            android:textSize="18dp"/>
    <TextView
        android:id="@+id/tv_dadosIdentificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados para autenticação"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textColor="@color/azul"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/tv_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:textColor="@color/azul"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/et_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/tv_dadosPessoais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados pessoais"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/azul"
        android:textSize="16dp"
        />
    <EditText
        android:id="@+id/et_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="Nome"
        android:textSize="24dp"/>
    <EditText
        android:id="@+id/et_profissao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="Profissão"
        android:textSize="24dp"/>
    <EditText
        android:id="@+id/et_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="Altura"
        android:textSize="24dp"/>
    <EditText
        android:id="@+id/et_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="24dp"
        android:hint="Data de nascimento"
        android:focusable="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:textSize="16dp"
        android:layout_marginLeft="24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
    <RadioButton
        android:id="@+id/radioM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masc"
        android:textSize="24dp"
        />
    <RadioButton
        android:id="@+id/radioF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fem"
        android:textSize="24dp"/>
    <RadioButton
        android:id="@+id/radioAnother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Outro"
        android:textSize="24dp"/>
    </LinearLayout>



</LinearLayout>