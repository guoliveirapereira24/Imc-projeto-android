<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardActivity"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:background="@color/azul">

         <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

             <ImageView
                 android:id="@+id/imagem_usuario"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:background="@drawable/user"

                 />
         </androidx.cardview.widget.CardView>
   </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
       <TextView
           android:id="@+id/nome_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rodrigo Duarte"
            android:gravity="center"
            android:background="@color/azul"
            android:textColor="@android:color/white"
           android:textSize="18dp"/>
       <TextView
           android:id="@+id/profissao_usuario"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Profissão"
           android:gravity="center"
           android:background="@color/azul"
           android:textColor="@android:color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_text_login"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/idade_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="51"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/background_text_login"

            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de nascimento:"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/data_nascimento_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="26/05/1980"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/background_text_login"
            android:textColor="@android:color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="IMC:"
           android:textSize="18dp"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="10dp"
           android:textColor="@android:color/black"/>

       <TextView
           android:id="@+id/imc_usuario"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:text="27.7"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:gravity="center"
           android:background="@drawable/background_text_login"
           android:textColor="@android:color/black"
           />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Peso:"
           android:textColor="@android:color/black"
           android:textSize="18dp"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/peso_usuario"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:text="68"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:gravity="center"
           android:background="@drawable/background_text_login"
           android:textColor="@android:color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Altura:"
           android:textColor="@android:color/black"
           android:textSize="18dp"
           android:layout_marginTop="12dp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/altura_usuario"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:text="1.78"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="20dp"
           android:gravity="center"
           android:background="@drawable/background_text_login"
           android:textColor="@android:color/black"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <Button
        android:id="@+id/botao_pesar_agora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/ic_balanca_foreground"
        android:layout_margin="10dp"
        android:text="Pesar agora"
        android:background="@drawable/background_text_login"
        />
    <Button
        android:id="@+id/botao_historico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histórico"
        android:drawableStart="@mipmap/ic_grafico_foreground"
        android:background="@drawable/background_text_login"
        android:layout_margin="10dp"
        />




</LinearLayout>

